require(['jquery','bootstrap-grid','Util','table-toolbar','bootstrap-dialog','ztree'],function($,bootstrapGrid,Util,toolbar,bootstrapDialog,ztree){
	var toolbarc = $(".table-toolbar").toolbar();
	var gridTable=$('#exampointerGrid').bootstrapGrid({
		url:Util.getPath()+'/manage/data/exampointer.json',
		uniqueId:'id',
		toolbarc:toolbarc,	
		customHeight:64,
		columns:[{
			checkbox:true
		},{
			visible:false,
			field:'id',
			title:'主键',
		},{
			field:'examNum',
			title:'考点编号',
			width:'12%',
		},{
			field:'examName',
			title:'考点名称',
			width:'12%',
		},{
			field:'examAddress',
			title:'考点地址',
			width:'20%',
		},{
			field:'examIPAddress',
			title:'考点服务器IP',
			width:'12%',
		},{
			field:'examPort',
			title:'考点服务器端口',
			width:'12%',
		},{
			field:'examPerson',
			title:'考点负责人',
			width:'10%',
		},{
			field:'examPhone',
			title:'考点负责人电话',
			width:'12%',
		},{
			field:'id',
			title:'操作',
			formatter:function(value,row,index){
				return[
					'<a class="table-operation table-operation-edit fa fa-pencil-square-o" href="javascript:void(0)" title="修改"></a>',
					'<a class="table-operation table-operation-del fa fa-trash-o" href="javascript:void(0)" title="删除"></a>'
				].join('');
			}
		}]
	});
	var exampointerDialog=new bootstrapDialog({
		title:'新增考点管理',
		type:'type-default',
		message:$('#exampointerAddForm'),
		closeByBackdrop: false,
        closeByKeyboard: false,
        autodestroy:false,
        draggable:true,
        cssClass:'exampointerDialog',
        buttons: [{
        	id:'exampointerBtn',
            label: '保存',
            autospin: false,
            icon: 'glyphicon glyphicon-check',    
            cssClass:' btn-success btn-sm',
            action: function(dialogRef){
         		exampointerDialog.close();
            }
        },{
            label: '取消',
            autospin: false,
            icon:'glyphicon glyphicon-remove',
            cssClass:' btn-default btn-sm',
            action: function(dialogRef){
            	exampointerDialog.close();
            }
        }]
	});
	$('#btn-add').on('click',function(){
		exampointerDialog.open();
	});
});